CORE_NAME=xv_loader

MK_PATH := $(abspath $(lastword $(MAKEFILE_LIST)))
CUR_DIR=$(patsubst %/,%,$(dir $(MK_PATH)))

#hw, hw_emu
TARGET?=hw

KERNEL_DIR=$(CUR_DIR)
KERNEL=$(CORE_NAME)_top

SRCS=$(KERNEL_DIR)/$(CORE_NAME)_top.cpp \
     $(KERNEL_DIR)/$(CORE_NAME).cpp

COMMON_DIR=$(CUR_DIR)/../common
COMMON_SRCS=$(COMMON_DIR)/sbe_intf.cpp

XOCCFLAGS := --platform $(XILINX_PLATFORM) -t $(TARGET)  -s -g

.PHONY: all
all: $(KERNEL)_$(TARGET).xo

$(KERNEL)_$(TARGET).xo : $(SRCS) $(COMMON_SRCS)
	v++ $(XOCCFLAGS) --kernel $(KERNEL) -I. -I$(COMMON_DIR) --advanced.prop kernel.$(KERNEL).kernel_flags="-std=c++0x -D__SDSVHLS__ -DHLS_NO_XIL_FPO_LIB" -c -o $@ $<

.PHONY: clean
clean:
	-rm -rf _x
	-rm -rf .Xil
	-rm -f *.xo
	-rm -f *.xo.*
	-rm -f *.log
